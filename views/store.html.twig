<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>Shoe Store</title>
  </head>
  <body>
    <div class='container'>
      <h1>Shoe Store</h1>
      <h1>{{ store.getStoreName }}</h1>
      <div class='row'>
        <div class='col-sm-6'>
          <h3>Brands Carried</h3>
          {% for brand in brands %}
            <p>{{ brand.getBrandName }}</p>
          {% endfor %}
          <form action='/store/{{ store.getId }}/add_brand' method='post'>
            <h3>Add a Brand</h3>
            <select name='brand_id'>
              {% for brand in all_brands %}
                <option value='{{ brand.getId }}'>{{ brand.getBrandName }}</option>
              {% endfor %}
            </select>
            <button type='submit'>Add</button>
          </form>
        </div>
        <div class='col-sm-6'>
          <form action='/store/{{ store.getId }}' method='post'>
            <input name="_method" type="hidden" value="patch">
            <label for='store_name'>New Name:</label>
            <input id='store_name' name='store_name' type='text' value='{{ store.getStoreName }}'>
            <button type='submit'>Update Name</button>
          </form>
          <form action='/store/{{ store.getId }}' method='post'>
            <input name="_method" type="hidden" value="delete">
            <button type='submit'>Delete Store</button>
          </form>
        </div>
      </div>

    </div>

  </body>
</html>
