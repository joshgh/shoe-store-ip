<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Shoes</title>
  </head>
  <body>
    <div class='container'>
      <h1>Shoes</h1>
      <div class='row'>
        <div class='col-sm-6'>
          <h2>Stores</h2>
          {% for store in stores %}
            <p><a href='/store/{{ store.getId }}'>{{ store.getStoreName }}</a></p>
          {% endfor %}
          {% if stores %}
            <form action='/stores' method='post'>
              <input name="_method" type="hidden" value="delete">
              <button class='btn btn-danger' type='submit'>Delete All</button>
            </form>
          {% endif %}
          <form action='/add_store' method='post'>
            <h3>Add a Store</h3>
            <label for='store_name'>Name of Store:</label>
            <input type='text' name='store_name' id='store_name' required>
            <button class='btn btn-success' type='submit'>Add Store</button>
          </form>
        </div>
        <div class='col-sm-6'>
          <h2>Brands</h2>
          {% for brand in brands %}
            <p><a href='/brand/{{ brand.getId }}'>{{ brand.getBrandName }}</a></p>
          {% endfor %}
          {% if brands %}
            <form action='/brands' method='post'>
              <input name="_method" type="hidden" value="delete">
              <button class='btn btn-danger' type='submit'>Delete All</button>
            </form>
          {% endif %}
          <form action='/add_brand' method='post'>
            <h3>Add a Brand</h3>
            <label for='brand_name'>Name of Brand:</label>
            <input type='text' name='brand_name' id='brand_name' required>
            <button class='btn btn-success' type='submit'>Add Brand</button>
          </form>
        </div>
      </div>

    </div>

  </body>
</html>
